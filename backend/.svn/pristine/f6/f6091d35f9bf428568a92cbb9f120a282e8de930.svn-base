body{background-color: #fff;}
.container{position: relative;}
.banner-cont .banner-pic{display: block;width: 100%;}
.cont-title {padding: 1.1rem 1.5rem; border-bottom: 1px #e9e9e9 solid;}
.cont-title .title-txt {font-size: 1.6rem; font-weight: normal;margin-bottom: .67rem;color: #333;}
.cont-title .sub-title{overflow: hidden;}
.sub-title .title-info{float: left; color: #999;margin-right: 1.2rem;}
.sub-title .title-info img{display: inline-block;width: 1rem;margin-bottom: -.1rem;}

.cont-txt {padding: 1.1rem 1.5rem; border-bottom: 1px #e9e9e9 solid;color: #666;font-size: 1.2rem;line-height: 1.6rem;}

/*上一篇，下一篇*/
.sibling-links {padding: .9rem 1.5rem;overflow: hidden;font-size: 1.1rem;}
.sibling-links .prev-link,.sibling-links .next-link{width: 45%;color: #999;}
.sibling-links .prev-link{float: left;}
.sibling-links .next-link{float: right;}
.sibling-links .prev-link span,.sibling-links .next-link span{display: block;}
.sibling-links .next-link .link-txt,.sibling-links .next-link .link-title{text-align: right;}
.sibling-links .link-txt img{display: inline-block;width: .8rem;}
.next-link .link-txt img{margin-left: .8rem;}
.prev-link .link-txt img{margin-right: .8rem;}

.sibling-links .link-title { width: 99%; overflow: hidden; text-overflow: ellipsis; white-space: nowrap;font-size: .9rem;margin-top: .4rem;}


/*相关活动*/
.related-info{background-color: #f4f4f4;}
.related-info .related-title{padding: 1.2rem 1.5rem; border-bottom: 1px #e9e9e9 solid; font-size: 1.4rem; color: #666;}
.related-info .related-title img{display: inline-block;width: 1.3rem;margin-bottom: -.2rem; margin-right: .5rem;}
.related-info .related-list .related-item{display: block; padding: .8rem 1.5rem;border-bottom: 1px #e9e9e9 solid;color: #999;}
.related-info .related-list .related-item .related-txt{display: inline-block; width: 86%;overflow: hidden;white-space: nowrap;text-overflow: ellipsis;}
.related-info .related-list .related-item .right-icon{float: right;}
.related-list .related-item .right-icon img{display: block;width: .9rem;margin-top: .2rem;}


/*阅读更多*/
.more-div{position: fixed;bottom: 0;z-index: 2;background-color: #fff;width: 100%;   padding: 1rem 0;text-align: center;}
.more-div img{width: 4rem;}
.all .more-div{display: none;}


/*新闻详情独自*/
.sub-title .title-info.notice{background-color: #eb6100;color: #fff;padding: .1rem .4rem;border-radius: 3px;}
.sub-title .title-info.activity{background-color: #e90214;color: #fff;padding: .1rem .4rem;border-radius: 3px;}

@media screen and (max-width:375px){
	.sibling-links,.cont-title .sub-title{font-size: 1.2rem;}
	.sibling-links .link-title{font-size: 1.1rem;}
}
