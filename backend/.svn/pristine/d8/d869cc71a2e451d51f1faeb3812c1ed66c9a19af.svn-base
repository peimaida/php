.page-title .page-title-img{width: 1.7rem;}
/*头部top category样式*/
.top-container{width:100%;position: relative;overflow: hidden;}
.top-container .cate-tops{width: 200%;position: absolute;left: 0;}
.top-container .cate-top6,.top-container .cate-top12{float: left;width: 50%;}
.top-container .cate-tops li{float: left;width: 16%;text-align: center;border-bottom:1px #e9e9e9 solid;border-right: 1px #e9e9e9 solid;padding: 3% 0;color: #666;}
.top-container .cate-tops li:nth-child(3n){border-right: 0;}
.top-container li .top-icon{display: inline-block;height: 2.2rem;}
.top-container li .top-icon.chosen{display: none;}

/*.top-container li .top-txt{display: block;width: 67%;margin: 0 auto;height: 3rem;margin-top: .5rem;font-size: 1.25rem;}*/
.top-container li p{display: table;height: 3.5rem;width: 100%;margin-top: .5rem;line-height: 1.75rem;}
.top-container li .top-txt{display: table-cell;vertical-align: middle;padding: 0 16%;font-size: 1.25rem;}

.top-container li.on{background-color: #0169c6;color: #fff;}
.top-container li.on .top-icon.chosen{display: inline-block;}
.top-container li.on .top-icon.unchosen{display: none;}
